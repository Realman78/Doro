<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/main.css">
    <link rel="stylesheet" href="./css/modal.css">
    <title>Home</title>
</head>
<body>
    <script>
        var userLoggedIn = {{{ userLoggedInJs }}}
    </script>
    <div class="wrapper">
        <div class="mainContainer">
            <div class="leftSide">
                <div class="newMessageSection">
                    <button id="addFriendButton">+ Add friend</button>
                    <button id="pendingRequestsButton">Comrades</button>
                </div>
                
                <div class="chatsSection">
                    <div class="searchSection">
                        <input type="text" placeholder="Search for chats..." id="chatSearchbox">
                        <button id="newMessageButton">+</button>
                    </div>
                    <div class="chats">
                        <ul class="chatList">
                            {{!-- <li class="chatPreview">
                                <div class="chatPreviewProfilePicture">
                                    <img src="{{loggedUser.profilePic}}" alt="Profile Picture">
                                </div>
                                <div class="chatPreviewContent">
                                    <p>Name Today</p>
                                    <p>Message</p>
                                </div>
                            </li> --}}
                        </ul>
                        
                    </div>
                </div>
                <div class="profileSettings">
                    <img src="{{loggedUser.profilePic}}" alt="Profile Picture">
                    <button id="logoutButton">Logout</button>
                </div>
            </div>
            <div class="contentSection">
                <div style="display: none;" class="messagingSection" id="messagingSectionId">
                    <div class="chatSection">
                        <div class="chatHeader">
                            <img id="chatPhoto" src="{{loggedUser.profilePic}}" alt="Profile Picture">
                            <h1 id="chatName">Name</h1>
                        </div>
                        <div class="chatContent">
                            <ul class="messages">
                                {{!-- <li class="message">
                                    <span class="mine">
                                        <h2>This is my message</h2>
                                    </span>
                                </li>
                                <li class="message">
                                    <span class="others">
                                        <h2>This is their message</h2>
                                    </span>
                                </li> --}}
                            </ul>
                        </div>
                    </div>
                    <div class="sendSection">
                        <button id="stickerButton" class="sendSectionButton"><i class="fas fa-sticky-note"></i></button>
                        <button id="fileButton" class="sendSectionButton"><i class="fas fa-file-image"></i></button>
                        <button id="gifButton" class="sendSectionButton"><i class="fas fa-gift"></i></button>
                        <div id="dajeee">
                            <div id="messageContentInput"
                                contenteditable="true">
                                
                            </div>
                        </div>
                        {{!-- <textarea id="messageContentInput" placeholder="Type a message..." rows="1"></textarea> --}}
                        <button id="sendMessageButton" class="sendSectionButton"><i class="fas fa-paper-plane"></i></button>
                    </div>
                </div>

                <div class="pendingRequestsSectionClass" id="pendingRequestsSection">
                    <div class="chatHeader" id="pendingRequestsHeader">
                        <header>Comrade Dashboard</header>
                    </div>
                    <h2>Pending</h2>
                    <div class="pendingRequests">

                    </div>
                    <h2>Comrades</h2>
                    <div class="comradeList">

                    </div>
                    <div class="comradesFooter">

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- MODALI --}}
    <div id="addFriendModal" class="backdrop">
        <div class="modal">
            <div class="ModalContent">
                <h1>Add a friend</h1>
                <input autocomplete="off" type="text" id="addFriendSearchbox" class="modalSearchBox" placeholder="Search for a user...">
                <h2 id="noUsersFoundSearch">No users found.</h2>
                <div class="availableUsers">
                </div>
            </div>
        </div>
    </div>

    <div id="newChatModal" class="backdrop">
        <div class="modal">
            <div class="ModalContent">
                <h1>New message</h1>
                <input autocomplete="off" type="text" id="newChatSearchbox" class="modalSearchBox" placeholder="Search for a comrade...">
                <span class="selectedUsersNumberSpan">
                    <p id="selectedUsersNumber">
                        Selected users: 0
                    </p>
                </span>
                <h2 style="display: none;" id="noUsersFoundSearchNewChat">No users found.</h2>
                <div class="availableUsers" id="availableUsersNewChat">

                </div>
                <div class="sendSectionModal" style="display: none;">
                    <input type="text" placeholder="Type a message to greet everyone..." class="modalMessageBox">
                    <button class="sendMessageButton">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/85404227e2.js" crossorigin="anonymous"></script>
    <script src="./js/index.js"></script>
    <script src="./js/chats.js"></script>
</body>
</html>